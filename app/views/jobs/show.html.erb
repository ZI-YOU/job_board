<div id="jobs">
  <div class="job">
	<h2><%= @job.title %></h2>
	<p><%= @job.description %></p>
	<p><%= @job.company %></p>
    <%= link_to "Apply for Job", @job.url, class: "btn btn-md btn-default" %>
  
</div>

<div id="links">
<%= link_to("Home", root_path, class: "btn btn-sm btn-default") %>
<%= link_to("Edit", edit_job_path, class: "btn btn-sm btn-default") %>
<%= link_to "Delete", job_path(@job), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-sm btn-default" %>
</div>